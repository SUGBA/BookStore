@using BookStore.Admin.Entity;
@using BookStore.Data.EntityDto.AdminDto;
@model AdminItemsDto<AdminUserDto>

<link rel="stylesheet" href="~/css/upperStyles.css" asp-append-version="true">
<link rel="stylesheet" href="~/css/adminPageStyles.css" asp-append-version="true">

<div class="PanelLeft">
    <label class="upperLabel">Добро пожаловать, Валиев Антон Дмитриевич</label>
    <div class="outContainer">
        <div class="leftContainer">
            <nav class="modifyList">
                <ul>
                    <li><a asp-controller="Admin" asp-action="GetUsersEditView">Пользователи</a></li>
                    <li><a asp-controller="Admin" asp-action="GetCatalogEditView">Каталог</a></li>
                    <li><a asp-controller="Admin" asp-action="GetNewsEditView">Новости</a></li>
                </ul>
            </nav>
            <label class="upperLabel">@Model.IsCreatedMessage</label>
            <form asp-action="SubmitUserItem" asp-controller="Admin" class="formContainer" method="post">
                <div class="textInput">
                    <label asp-for="ActiveItem.ViewName">ФИО:</label>
                    <input type="text" asp-for="ActiveItem.ViewName" value="@Model.ActiveItem.ViewName" required>
                </div>
                <div class="textInput">
                    <label asp-for="ActiveItem.Login">Логин:</label>
                    <input type="text" asp-for="ActiveItem.Login" value="@Model.ActiveItem.Login" required>
                </div>
                <div class="textInput">
                    <label asp-for="ActiveItem.Password">Пароль:</label>
                    <input type="text" asp-for="ActiveItem.Password" value="@Model.ActiveItem.Password" required>
                </div>

                <div class="radioInput">
                    <label>Роль:</label>
                    <input type="radio" asp-for="ActiveItem.Role" checked="@(Model.ActiveItem.Role==UserRole.Admin)" value=@UserRole.Admin id="adminRadio" required><label for="adminRadio">Администратор</label><br>
                    <input type="radio" asp-for="ActiveItem.Role" checked="@(Model.ActiveItem.Role==UserRole.User)" value=@UserRole.User id="userRadio"><label for="userRadio">Пользователь</label>
                </div>

                <div class="submitInput">
                    <button type="submit">Отправить</button>
                </div>
            </form>
        </div>

        <div class="rightContainer">
            <a asp-controller="Admin" asp-action="GetUsersEditView" class="addButton">Добавить</a>
            <nav class="itemsList">
                <ul>
                    @{
                        foreach (var item in Model.Items)
                        {
                            <li>
                                <div class="linkLine">
                                    <a asp-controller="Admin" asp-action="SelectingUserElement" asp-route-itemId="@item.Id" style="float: left">@item.ViewName</a>
                                    <a asp-controller="Admin" asp-action="DeleteUser" asp-route-itemId="@item.Id" style="float: right; width:10px">X</a>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
