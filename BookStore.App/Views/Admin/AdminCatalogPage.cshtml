@using BookStore.Catalog.Entity;
@using BookStore.Data.EntityDto.AdminDto;
@model AdminItemsDto<StoreEntity>


<link rel="stylesheet" href="~/css/upperStyles.css" asp-append-version="true">
<link rel="stylesheet" href="~/css/adminPageStyles.css" asp-append-version="true">

<div class="PanelLeft">
    <label class="upperLabel">Добро пожаловать, Валиев Антон Дмитриевич</label>
    <div class="outContainer">
        <div class="leftContainer">
            <nav class="modifyList">
                <ul>
                    <li><a asp-controller="Admin" asp-action="GetUsersEditView">Пользователи</a></li>
                    <li><a asp-controller="Admin" asp-action="GetCatalogEditView">Каталог</a></li>
                    <li><a asp-controller="Admin" asp-action="GetNewsEditView">Новости</a></li>
                </ul>
            </nav>
            <form class="formContainer" method="post">
                <div class="textInput">
                    <label for="Name">Название:</label>
                    <input type="text" id="Name" name="Name" placeholder=@Model.ActiveItem.Book.Name>
                </div>
                <div class="textInput">
                    <label for="Price">Цена:</label>
                    <input type="number" id="Price" name="Price" placeholder=@Model.ActiveItem.Book.Price>
                </div>
                <div class="textInput">
                    <label for="PageCount">Колличество страниц:</label>
                    <input type="number" id="PageCount" name="PageCount" placeholder=@Model.ActiveItem.Book.PageCount>
                </div>
                <div class="textInput">
                    <label for="Genre">Жанр:</label>
                    <input type="text" id="Genre" name="Genre" placeholder="Введите новый жанр">
                </div>
                <div class="textInput">
                    <label for="CountItems">Колличество в наличии:</label>
                    <input type="number" id="CountItems" name="CountItems" placeholder=@Model.ActiveItem.BookCount>
                </div>
                <div class="textInput">
                    <label for="Address">Адрес:</label>
                    <input type="text" id="Address" name="Address" placeholder=@Model.ActiveItem.Department.Address>
                </div>
                <div class="textInput">
                    <label for="PathToImage">Изображение:</label>
                    <input type="file" name="PathToImage">
                </div>
                <div class="submitInput">
                    <button type="submit">Отправить</button>
                </div>
            </form>
        </div>

        <div class="rightContainer">
            <a asp-controller="Admin" asp-action="GetCatalogEditView" class="addButton">Добавить</a>
            <nav class="itemsList">
                <ul>
                    @{
                        foreach (var item in Model.Items)
                        {
                            <li>
                                <a asp-controller="Admin" asp-action="SelectingCatalogElement"
                                   asp-route-departmentId="@item.DepartmentEntityId" asp-route-bookId="@item.BookEntityId">
                                    @item.Book.Name
                                </a>
                            </li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
